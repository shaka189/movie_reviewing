<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="row well">
        <tr>
          <td><h1><%= raw @post.title %></h1></td>
          <div class = "button-like" id= "<%= @like.present? ? @like.id : 0 %>">
            <% if logged_in? %>
              <%= render "likes/like" %>
              <%= render "likes/unlike" %>
            <% end %>
          </div>
          <br/>
          <%= render "shared/share_facebook_button" %>
          <td><i><%= t "post_reviews.index.time" %>
          <%= @post.updated_at.strftime("%d-%m-%Y") %>&nbsp</i></td>
          <br/><br/>
          <td><%= raw @post.content %></td>
        </tr>
        <br/>
      </div>
      <% if current_user.admin? %>
        <%= link_to t("admin.post.back_to_post"), admin_post_reviews_path %>
      <% else %>
        <%= link_to t("post_reviews.form.back_to_profile"), current_user %>
      <%end%>
      <div class="col-md-12">
        <br/>
        <%= render "comment/form" %>
        <br/>
      </div>
      <div class="row well header-comment">
        <%= render partial: 'comment/comment', collection: @comments %>
        <%= will_paginate @comments %>
      </div>
    </div>
  </div>
</div>
